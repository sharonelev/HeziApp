<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/themeColor">
  <FrameLayout
    android:id="@+id/picFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/theSite"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:text="דן חיפה"
      android:textAlignment="center"
      android:textColor="#ffffff"
      android:textSize="40sp"
      />

    <ImageView
      android:id="@+id/topPic"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:src="@drawable/haifa"
      />


  </FrameLayout>

  <TextView
    android:id="@+id/kolHakavod"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="כל הכבוד!"
    android:textSize="35dp"
    android:paddingTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/picFrame"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />
  <TextView
    android:id="@+id/topText"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="serif-monospace"
    android:text = "השלמת את כל המשימות בהצלחה, סע לנוח במלון ותהנה משבת מלאת הפתעות בחיק המשפחה האוהבת.\nמזל טוב!"
    android:textAlignment="center"
    android:textSize="18sp"
    android:typeface="monospace"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="20dp"
    app:layout_constraintTop_toBottomOf="@id/kolHakavod"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
  />

  <ImageView
    android:id="@+id/balloons"
    app:layout_constraintBottom_toTopOf="@id/topText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/party_balloons"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    />
</android.support.constraint.ConstraintLayout>